{
    "variables": {
      "build_name": "qstack_systemvm_template"
    },
    "builders":
    [
        {
            "type": "qemu",
            "iso_url": "http://cdimage.debian.org/cdimage/archive/7.11.0/amd64/iso-cd/debian-7.11.0-amd64-netinst.iso",
            "iso_checksum": "096c1c18b44c269808bd815d58c53c8f",
            "iso_checksum_type": "md5",
            "output_directory": "packer_output",
            "ssh_wait_timeout": "30s",
            "shutdown_command": "/sbin/shutdown -hP now",
            "disk_size": "20480",
            "format": "qcow2",
            "accelerator": "kvm",
            "headless": "true",
            "qemuargs":
            [
                [ "-m", "512M" ],
                [ "-smp" , "1" ]
            ],
            "http_directory": "httpdir",
            "http_port_min": 10082,
            "http_port_max": 10089,
            "ssh_host_port_min": 2222,
            "ssh_host_port_max": 2229,
            "ssh_username": "root",
            "ssh_password": "password",
            "ssh_port": 22,
            "ssh_wait_timeout": "90m",
            "vm_name": "qstack-systemvm",
            "net_device": "virtio-net",
            "disk_interface": "virtio",
            "boot_wait": "15s",
            "boot_command":
            [
                "<esc><wait5>",
                "install <wait>",
                "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed/debian7.preseed ",
                "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
                "keyboard-configuration/xkb-keymap=us ",
                "netcfg/get_hostname=qstack-systemvm ",
                "netcfg/get_domain=qstack.com ",
                "fb=false debconf/frontend=noninteractive ",
                "console-setup/ask_detect=false <wait>",
                "console-keymaps-at/keymap=us <wait>",
                "<enter>"
            ]
        }
    ],
    "provisioners":
    [
        {
            "type": "file",
            "source": "files/cloud-early-config",
            "destination": "/tmp/cloud-early-config"
        },
        {
            "type": "file",
            "source": "files/patchsystemvm.sh",
            "destination": "/tmp/patchsystemvm.sh"
        },
        {
            "type": "file",
            "source": "files/systemvmtemplate-version",
            "destination": "/tmp/systemvmtemplate-version"
        },
        {
            "type": "shell",
            "scripts":
            [
                "scripts/build_time.sh",
                "scripts/disk_size.sh",
                "scripts/apt_get.sh",
                "scripts/grub.sh",
                "scripts/locale.sh",
                "scripts/login.sh",
                "scripts/networking.sh",
                "scripts/acpid.sh",
                "scripts/packages.sh",
                "scripts/conntrack.sh",
                "scripts/service_config.sh",
                "scripts/cleanup.sh",
                "scripts/tmout.sh"
            ],
            "execute_command": "bash '{{.Path}}'"
        }
    ],
    "post-processors":
    [
        {
            "type": "shell-local",
            "scripts":
            [
                "scripts/zerodisk.sh",
                "scripts/convert.sh",
                "scripts/compress.sh"
            ]
        }
    ]
}
